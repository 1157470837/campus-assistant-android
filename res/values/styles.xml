<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- rootView -->
    <style name="rootview_relative">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="rootview_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dip</item>
    </style>
    <style name="rootview_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">55dip</item>
    </style>
    
    <!-- learn -->
     <style name="learn_list_tableRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="learn_list_relative">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dip</item>
    </style>
    <style name="learn_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/learn_list_item</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="learn_list_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#552233</item>
        <item name="android:text">List 10</item>
        <item name="android:textSize">17dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginTop">16dip</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <!-- setting -->
    <style name="set_custom_textview_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">14dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="set_custom_textview_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#000000</item>
    </style>
    
</resources>